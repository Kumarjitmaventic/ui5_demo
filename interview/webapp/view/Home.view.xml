<mvc:View xmlns:f="sap.f" xmlns:core="sap.ui.core"
	controllerName="demo.interview.interview.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
		<semantic:SemanticPage id="page">
			<semantic:titleHeading>
				<Title
					id="masterHeaderTitle"
					text="{i18n>masterTitleCount} ({masterView>/titleCount})"/>
			</semantic:titleHeading>
			<semantic:content>
				<!-- For client side filtering add this to the items attribute: parameters: {operationMode: 'Client'}}" -->
				<List
					id="list"
					width="auto"
					class="sapFDynamicPageAlignContent"
					items="{masterView>/Orders}"
					busyIndicatorDelay="{masterView>/delay}"
					noDataText="{masterView>/noDataText}"
					mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished=".onUpdateFinished"
					selectionChange=".onSelectionChange">
					<infoToolbar>
						<Toolbar
							active="true"
							id="filterBar"
							visible="{masterView>/isFilterBarVisible}"
							press=".onOpenViewSettings">
							<Title
								id="filterBarLabel"
								text="{masterView>/filterBarLabel}" />
						</Toolbar>
					</infoToolbar>
					<headerToolbar>
						<OverflowToolbar id="_IDGenOverflowToolbar1">
							<SearchField
								id="searchField"
								showRefreshButton="true"
								tooltip="{i18n>masterSearchTooltip}"
								width="100%"
								search=".onSearch">
								<layoutData>
									<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1"
										minWidth="150px"
										maxWidth="240px"
										shrinkable="true"
										priority="NeverOverflow"/>
								</layoutData>
							</SearchField>
							<ToolbarSpacer id="_IDGenToolbarSpacer1"/>
							<Button
								id="filterButton"
								press=".onOpenViewSettings"
								icon="sap-icon://filter"
								type="Transparent"/>
							<Button
								id="groupButton"
								press=".onOpenViewSettings"
								icon="sap-icon://group-2"
								type="Transparent"/>
						</OverflowToolbar>
					</headerToolbar>
					<items>
						<ObjectListItem id="_IDGenObjectListItem1"
							type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}"
							press=".onSelectionChange"
							title="{masterView>id}"

							number="{
								path: 'masterView>interview_date',
								type: 'sap.ui.model.type.Date',
								formatOptions:{pattern:'YYYY/MM/DD'}
							}"
							>
							<firstStatus>
								<ObjectStatus id="_IDGenObjectStatus2" 
								text="{path: 'masterView>interview_date'}">
									
								</ObjectStatus>
								

							</firstStatus>
							<secondStatus>
								<ObjectStatus id="_IDGenObjectStatus1"
									state="{path: 'masterView>interview_status', formatter:'.formatter.deliveryState'}"
									text="{masterView>interview_status}"/>
							</secondStatus>
							
							<attributes>
								<ObjectAttribute id="companyName" text="{masterView>desc}" />
								<ObjectAttribute id="employee" title="Employee" text="{masterView>employee}" />
								
							</attributes>
						</ObjectListItem>
					</items>
				</List>
			</semantic:content>
		</semantic:SemanticPage>
</mvc:View>